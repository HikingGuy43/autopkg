<?xml version="1.0" encoding="UTF-8"?>
<recipe xmlns="http://autopkg.github.io/autopkg/recipe">
    <identifier>com.github.sysco.recipes.pkg.CiscoAnyConnect</identifier>
    <minimum_version>2.3</minimum_version>
    <description>Creates a Cisco AnyConnect VPN-only package.</description>
    <input>
        <key>NAME</key>
        <string>Cisco AnyConnect Secure Mobility Client</string>
        <key>VPN_XML</key>
        <string>Employee_1.0.xml</string>
        <key>PROFILES</key>
        <string>%RECIPE_DIR%/Profiles</string>
    </input>
    <process>
        <processor>PackageRequired</processor>

        <processor>PkgRootCreator</processor>
        <arguments>
            <dict>
                <key>pkgdirs</key>
                <dict>
                    <key>Profiles</key>
                    <string>0755</string>
                    <key>Profiles/vpn</key>
                    <string>0755</string>
                </dict>
                <key>pkgroot</key>
                <string>%RECIPE_CACHE_DIR%/Scripts</string>
            </dict>
        </arguments>

        <processor>PkgRootCreator</processor>
        <arguments>
            <dict>
                <key>pkgdirs</key>
                <dict/>
                <key>pkgroot</key>
                <string>%RECIPE_CACHE_DIR%/pkgroot</string>
            </dict>
        </arguments>

        <processor>PkgCopier</processor>
        <arguments>
            <dict>
                <key>pkg_path</key>
                <string>%RECIPE_CACHE_DIR%/Scripts/AnyConnect.pkg</string>
                <key>source_pkg</key>
                <string>%PKG%/AnyConnect.pkg</string>
            </dict>
        </arguments>

        <processor>FlatPkgUnpacker</processor>
        <arguments>
            <dict>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/unpack</string>
                <key>flat_pkg_path</key>
                <string>%RECIPE_CACHE_DIR%/Scripts/AnyConnect.pkg</string>
                <key>purge_destination</key>
                <true/>
            </dict>
        </arguments>

        <processor>PkgPayloadUnpacker</processor>
        <arguments>
            <dict>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/Payload</string>
                <key>pkg_payload_path</key>
                <string>%RECIPE_CACHE_DIR%/unpack/vpn_module.pkg/Payload</string>
                <key>purge_destination</key>
                <true/>
            </dict>
        </arguments>

        <processor>Versioner</processor>
        <arguments>
            <dict>
                <key>input_plist_path</key>
                <string>%RECIPE_CACHE_DIR%/Payload/Applications/Cisco/Cisco AnyConnect Secure Mobility Client.app/Contents/Info.plist</string>
            </dict>
        </arguments>

        <processor>Copier</processor>
        <arguments>
            <dict>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/Scripts/Profiles/vpn/%VPN_XML%</string>
                <key>source_path</key>
                <string>%PROFILES%/%VPN_XML%</string>
            </dict>
        </arguments>

        <processor>FileCreator</processor>
        <arguments>
            <dict>
                <key>file_content</key>
                <string>
                    #!/bin/bash
                    ## script to install and activate Cisco AnyConnect

                    DIR=$(dirname "$0")

                    /usr/sbin/installer -applyChoiceChangesXML "$DIR/choices.xml" -pkg "$DIR/AnyConnect.pkg" -target /

                    if (test $? = 0) then
                        echo "Cisco AnyConnect installed."
                    else
                        echo "ERROR: Cisco AnyConnect installation failed."
                        exit 1
                    fi
                </string>
                <key>file_mode</key>
                <string>0755</string>
                <key>file_path</key>
                <string>%RECIPE_CACHE_DIR%/Scripts/postinstall</string>
            </dict>
        </arguments>

        <processor>PkgCreator</processor>
        <arguments>
            <dict>
                <key>pkg_request</key>
                <dict>
                    <key>chown</key>
                    <array/>
                    <key>id</key>
                    <string>ch.ethz.id.pkg.CiscoAnyConnect</string>
                    <key>pkgname</key>
                    <string>CiscoAnyConnect-%version%</string>
                    <key>pkgroot</key>
                    <string>%RECIPE_CACHE_DIR%/pkgroot</string>
                    <key>pkgtype</key>
                    <string>flat</string>
                    <key>scripts</key>
                    <string>Scripts</string>
                    <key>version</key>
                    <string>%version%</string>
                    <key>installer_choices_xml</key>
                    <array>
                        <dict>
                            <key>attributeSetting</key>
                            <integer>1</integer>
                            <key>choiceAttribute</key>
                            <string>selected</string>
                            <key>choiceIdentifier</key>
                            <string>choice_vpn</string>
                        </dict>
                        <dict>
                            <key>attributeSetting</key>
                            <integer>0</integer>
                            <key>choiceAttribute</key>
                            <string>selected</string>
                            <key>choiceIdentifier</key>
                            <string>choice_fireamp</string>
                        </dict>
                        <dict>
                            <key>attributeSetting</key>
                            <integer>0</integer>
                            <key>choiceAttribute</key>
                            <string>selected</string>
                            <key>choiceIdentifier</key>
                            <string>choice_dart</string>
                        </dict>
                        <dict>
                            <key>attributeSetting</key>
                            <integer>0</integer>
                            <key>choiceAttribute</key>
                            <string>selected</string>
                            <key>choiceIdentifier</key>
                            <string>choice_posture</string>
                        </dict>
                        <dict>
                            <key>attributeSetting</key>
                            <integer>0</integer>
                            <key>choiceAttribute</key>
                            <string>selected</string>
                            <key>choiceIdentifier</key>
                            <string>choice_iseposture</string>
                        </dict>
                        <dict>
                            <key>attributeSetting</key>
                            <integer>0</integer>
                            <key>choiceAttribute</key>
                            <string>selected</string>
                            <key>choiceIdentifier</key>
                            <string>choice_nvm</string>
                        </dict>
                        <dict>
                            <key>attributeSetting</key>
                            <integer>0</integer>
                            <key>choiceAttribute</key>
                            <string>selected</string>
                            <key>choiceIdentifier</key>
                            <string>choice_umbrella</string>
                        </dict>
                    </array>
                </dict>
            </dict>
        </arguments>

        <processor>PathDeleter</processor>
        <arguments>
            <dict>
                <key>path_list</key>
                <array>
                    <string>%RECIPE_CACHE_DIR%/AnyConnect.pkg</string>
                    <string>%RECIPE_CACHE_DIR%/unpack</string>
                    <string>%RECIPE_CACHE_DIR%/Payload</string>
                    <string>%RECIPE_CACHE_DIR%/Scripts</string>
                    <string>%RECIPE_CACHE_DIR%/pkgroot</string>
                </array>
            </dict>
        </arguments>
    </process>
</recipe>
